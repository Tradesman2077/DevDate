@page "/"
@using DatingApp.ViewModels
@inject NavigationManager _navigationManager
@inject LoginViewModel _loginViewModel
@inject IToastService _toastService
<h2><b>Login</b></h2>
<hr>
<div class="col-6">
    <input type="text" @bind="_loginViewModel.Username" class="form-control" placeholder="Username" required>
</div>
<br />
<div class="col-6">
    <input type="password" @bind="_loginViewModel.Password" class="form-control" placeholder="Password" required>
</div>
<div class="col-6">
    <button class="btn btn-primary mt-3" @onclick="LoginUser">Login</button>
</div>
<div class="col-6 ">
    <a href="/register" style="padding-top:2px;">Register here</a>
</div>


@code {
    public async Task LoginUser()
    {
        await _loginViewModel.LoginUser();

        _navigationManager.NavigateTo("/profile", true);
    }
}